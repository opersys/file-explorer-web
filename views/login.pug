doctype html
html
	head
		title File Explorer - Login
		link(rel="stylesheet", href="css/file-explorer_styles.css")
		link(rel="stylesheet", href="css/font-awesome.min.css")
		script(text="text/javascript", src="/js/file-explorer_libs.js")
		script(text="text/javascript", src="/js/file-explorer_login.js")
	body
		div.loginbox
			div.loginlogo
				img(src="images/opersys_land_logo.png")
			div.loginform
				h1
					|File Explorer - Login
				div
					|To proceed, enter the password generated in the File Explorer
					|UI on your device.
				form(action="/login", method="post")
					input(type="hidden", name="username", value="foo")
					input(type="password", name="password", placeholder="password")
					input(type="submit", value="log in")
			div#loginerror.loginerror


